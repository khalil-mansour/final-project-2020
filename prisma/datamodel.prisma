type UserGroup {
  id: ID! @id
  user: User! @relation(name: "UserUserGroup")
  userType: UserType! @relation
  group: Group! @relation(name:"GroupUserGroup")
}

type User {
  id: ID! @id
  userId: String! @unique
  name: String!
  lastName: String!
  email: String! @unique
  avatar: String
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type UserType{
  id: ID! @id
  type: String!
}

type Group {
  id: ID! @id
  name: String!
  address: Int!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Address {
  id: ID! @id
  country: String!
  province: String!
  city: String!
  noCivic: Int!
  appartmentUnit: Int
}

type Invitation {
  id: ID! @id
  owner: User! @realtion
  groupe: Group! @realtion(name:"groupInvitation")
  link: String! 
  expiredAt: DateTime! 
}

