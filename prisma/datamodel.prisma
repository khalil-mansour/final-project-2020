type User {
  id: ID! @id
  userId: String! @unique
  type: UserType @relation(name: "UserUserType")
  name: String!
  lastName: String!
  email: String! @unique
  groups: [Group!]! @relation(name: "UserGroups")
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type UserType {
  id: ID! @id
  type: String!
}

type Group {
  id: ID! @id
  name: String!
  address: Address! @relation(name: "GroupAddress")
  admin: User! @relation(name: "GroupAdmin")
  members: [User!]! @relation(name: "UserGroups")
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Address {
  id: ID! @id
  country: String!
  province: String!
  city: String!
  street: String!
  apartment_unit: Int
}

type Invitation {
  id: ID! @id
  owner: User! @relation(name: "InvitationOwner")
  group: Group!
  link: String! 
  expiredAt: DateTime! 
}

